    <changeSet id="10" author="wladponomar@gmail.com">
        <createTable tableName="authorities_roles_link">
            <column name="authority_id" type="int8">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="int8">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="11" author="wladponomar@gmail.com">
        <sql>
            ALTER TABLE authorities_roles_link
                ADD CONSTRAINT authorities_roles_link_authority_id_fkey FOREIGN KEY (authority_id) REFERENCES authorities (id);
